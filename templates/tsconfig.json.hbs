{
  "compilerOptions": {
    skipLibCheck: false,
    "outDir": "./lib",
    "moduleResolution": "node",
    {{#if (equals answers.module "esnext")}}
    "module": "esnext",
    "target": "es6",
    {{/if}}
    {{#unless (equals answers.module "esnext")}}
    "module": "commonjs",
    "target": "esnext",
    {{/unless}}
    "strict": true,
    "noImplicitAny": false,
    "declaration": true,
    {{#if (equals answers.module "commonjs")}}
    "resolveJsonModule": true,
    {{/if}}
    "baseUrl": "./",
    "rootDir": "./",
    "noEmitOnError": true,
    "paths": {
      "@/*": ["src/*"],
      "@root/*": ["./*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"],
  "ts-node": {
    "compiler": "ttypescript"
  }
}
