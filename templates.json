[
  {
    "path": [
      ".github/PULL_REQUEST_TEMPLATE.md.hbs",
      ".github/CONTRIBUTING.md.hbs",
      ".github/workflows/release.yml.hbs"
    ],
    "handlers": [
      {
        "name": "ignore",
        "options": {
          "eval": "resource.repository.isGitHubRepo === false"
        }
      },
      "handlebars"
    ]
  },
  {
    "path": ".github/**",
    "handlers": [
      {
        "name": "ignore",
        "options": {
          "eval": "resource.repository.isGitHubRepo === false"
        }
      }
    ]
  },
  {
    "path": [
      "src/**",
      "tests/!(tsconfig.json)/**"
    ],
    "handlers": [
      "exist"
    ]
  },
  {
    "path": [
      "package.json.hbs",
      "tsconfig.json.hbs"
    ],
    "handlers": [
      "handlebars",
      "merge-json"
    ]
  },
  {
    "path": [
      ".gitignore.hbs",
      ".npmignore.hbs",
      "README.md.hbs",
      "ava.config.js.hbs"
    ],
    "handlers": [
      "handlebars"
    ]
  },
  {
    "path": ".npmrc.hbs",
    "handlers": [
      {
        "name": "ignore",
        "options": {
          "eval": "resource.answers.lock === false"
        }
      },
      "handlebars"
    ]
  },
  {
    "path": ".travis.yml",
    "handlers": [
      {
        "name": "delete",
        "options": {
          "eval": "resource.answers.travis === false"
        }
      },
      "merge-yaml"
    ]
  },
  {
    "path": "build/tsconfig.cmd.json",
    "handlers": [
      {
        "name": "ignore",
        "options": {
          "eval": "resource.answers.module !== 'commonjs'"
        }
      },
      {
        "name": "rename",
        "options": {
          "filename": "tsconfig.lib.json"
        }
      }
    ]
  },
  {
    "path": "build/tsconfig.umd.json",
    "handlers": [
      {
        "name": "ignore",
        "options": {
          "eval": "resource.answers.module !== 'umd'"
        }
      },
      {
        "name": "rename",
        "options": {
          "filename": "tsconfig.lib.json"
        }
      }
    ]
  },
  {
    "path": "build/tsconfig.es.json",
    "handlers": [
      {
        "name": "ignore",
        "options": {
          "eval": "resource.answers.module === 'esnext'"
        }
      }
    ]
  }
]
