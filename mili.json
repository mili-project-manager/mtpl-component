{
  "engines": [
    "^4.3.0"
  ],
  "extends": [
    "npm:@mtpl/base",
    "npm:@mtpl/code-style",
    "npm:@mtpl/conventional-commits"
  ],
  "loaders": [
    "git",
    "npm",
    {
      "name": "markdown-section",
      "options": {
        "key": "readme",
        "filepath": "README.md",
        "sections": [
          "title",
          "description",
          "usage",
          "addition"
        ]
      }
    }
  ]
}
